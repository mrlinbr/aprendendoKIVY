<Button>
    size_hint: (0.2,0.2)
    font_size: 32
<calculadora>
    BoxLayout:
        orientation:'vertical'
        size: root.width,root.height

        TextInput:
            id: calc_input
            text:'0'
            halign: 'right'
            font_size: 65
            size_hint: (1,0.15)

        GridLayout:
            cols:4
            rows:5

            Button:
                text: 'CE'
            Button:
                text: 'C'
                on_press: root.clear()
            Button:
                text: 'DELETE'
            Button:
                text: '/'
                on_press: root.div()

            Button:
                text: '7'
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(7)
            Button:
                text: '8'
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(8)
            Button:
                text: '9'
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(9)
            Button:
                text: 'X'
                on_press: root.mult()

            Button:
                text: '4'
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(4)
            Button:
                text: '5'
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(5)
            Button:
                text: '6'
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(6)
            Button:
                text: '-'
                on_press:root.sub()

            Button:
                text: '1'
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(1)
            Button:
                text: '2'
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(2)
            Button:
                text: '3'
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(3)
            Button:
                text: '+'
                on_press:root.add()

            Button:
                text: '%'
            Button:
                text: '0'
                background_color: (157/255, 157/255, 157/255,1)
                on_press: root.button_press(0)
            Button:
                text: ','
            Button:
                text: '='
                on_press: root.calcular()